<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cornertry0"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_login"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:src="@drawable/emt1" />

    <TextView
        android:id="@+id/pls_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="Please Log In"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pls_login"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/loghorizon2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/loghorizon3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/inc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="ID"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Security Level:" />

                <TextView
                    android:id="@+id/inc_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="level" />

            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/username_login"
            android:layout_width="208dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="@drawable/loghorizon4"
            android:ems="10"
            android:hint="Username" />

        <EditText
            android:id="@+id/password_login"
            android:layout_width="208dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="@drawable/loghorizon4"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="208dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="@drawable/loghorizon1"
            android:text="Log In" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="208dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="@drawable/loghorizon1"
            android:text="Sign Up" />

    </LinearLayout>

</RelativeLayout>